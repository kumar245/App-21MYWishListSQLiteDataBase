<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kumar.user.app_21mywishlistsqlitedatabase.Wish_Detail">

    <TextView
        android:id="@+id/detailsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_title"
        android:layout_marginTop="36dp"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_dark"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="59dp"
        android:layout_marginStart="59dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailsTextView"
        android:gravity="center"
        android:text="@string/my_wish"
        android:textStyle="italic"
          android:textColor="@android:color/holo_orange_dark"
        android:textAlignment="center"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/detailsTitle"
        android:layout_alignLeft="@+id/deleteButton"
        android:layout_alignStart="@+id/deleteButton" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailsDateText"
        android:textStyle="italic"
        android:text="Data here...."
        android:textSize="11sp"
        android:layout_below="@+id/detailsTextView"
        android:layout_toRightOf="@+id/detailsTitle"
        android:layout_toEndOf="@+id/detailsTitle"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="13dp" />
<Button
    android:id="@+id/deleteButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Delete"
    android:layout_marginTop="51dp"
    android:layout_below="@+id/detailsDateText"
    android:layout_alignLeft="@+id/detailsTitle"
    android:layout_alignStart="@+id/detailsTitle"
    android:layout_marginLeft="22dp"
    android:layout_marginStart="22dp" />
</RelativeLayout>
